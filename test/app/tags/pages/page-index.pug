page-index
  div.flex.flex-column.h-full
    module-header
    div.h-full.overflow-scroll
      div.container.p10
        i.icon-home.fs64(onclick='{onclick}')
        i.icon-star.fs64
        div.items
          div.rounded-4.mb32.f(each='{items}')
            div.flex-fixed.mr16
              div.w200.s-w100.rect
                img.block.s-full.object-fit-cover(src='{image_url}')
            div.w-full
              h3.text-primary
                a(href='/items/{id}') {title}
              p.line-clamp-3.word-break-all {body}
    module-tabbar

  script.
    
    this.fetch = async ({app}) => {
      var posts = await app.ref.child('posts').get();
      return {
        items: posts.splice(0, 10),
      };
    };

    this.on('mount', () => {
    });
    
    this.on('show', function() {
    });

    this.onclick = () => {
      alert();
    };
